{% extends '::base.html.twig' %}

{% block body %}
    <div style="font-family: Lobster; padding: 5px; width: 100%; text-align: center; color: #D1D1D1; font-size: 1.7em;">
        Edit Entry
    </div>
    <hr />
    <form action="{{ path('b_conway_tracker_entry_edit', { 'id': entry.id }) }}" {{ form_enctype(form) }} method="POST" class="edit_entry" id="edit_entry">
        {{ form_start(form) }}
        <div class="errors">
            {{ form_errors(form) }}
        </div>
        <div class="field">
            {{ form_label(form.entry_date) }}
            {{ form_widget(form.entry_date, {'attr': {'class': 'date_picker', 'size': '30'} }) }}
        </div>
        <div class="field">
            {{ form_label(form.weight) }}
            {{ form_widget(form.weight, {'required': false, 'attr': {'max': '1000', 'min': '0', 'step': '0.1', 'size': '30'} }) }}
        </div>
        <div class="field">
            {{ form_label(form.deficit) }}
            {{ form_widget(form.deficit) }}
        </div>
        <div class="actions">
            {{ form_widget(form.createEntry, {'label': 'Update entry'}) }}
        </div>
        {{ form_end(form) }}
    </form>
{% endblock body %}