{% trans_default_domain 'FOSUserBundle' %}

<h2>Sign up</h2>

{{ form_errors(form) }}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="new_user">

    {{ form_start(form) }}
        <div>
            {{ form_label(form.username) }}<br />
            {{ form_widget(form.username, {'attr': {'size': '30'} }) }}
        </div>
        <div style="margin-top: 20px;">
            {{ form_label(form.email) }}<br />
            {{ form_widget(form.email, {'attr': {'size': '30'}}) }}
        </div>
        <div style="margin-top: 20px;">
            {{ form_label(form.plainPassword.first) }}<br />
            {{ form_widget(form.plainPassword.first, {'attr': {'size': '30'}}) }}
        </div>
        <div style="margin-top: 20px;">
            {{ form_label(form.plainPassword.second) }}<br />
            {{ form_widget(form.plainPassword.second, {'attr': {'size': '30'}}) }}
        </div>
        <div style="margin-top: 10px;">
            <div><input name="_submit" value="Sign up" type="submit" id="_submit" /></div>
        </div>
    {{ form_end(form) }}
    <br />
    <a href="{{ path('fos_user_security_login') }}">Sign in</a>
    <br />
    <a href="{{ path('fos_user_resetting_request') }}">Forgot your password?</a>
</form>